# GAINS Food Vision API Configuration

# Environment
DEBUG=true
PORT=8000

# Models
MODEL_NAME=food101-resnet50
MODEL_PATH=./models/food101_resnet50.pt
ENABLE_DETECTOR=false
DETECTOR_MODEL=yolov8n.pt

# Database
DATABASE_URL=sqlite:///./data/gains_food.db

# Inference
MAX_IMAGE_SIZE=1024
TOP_K_PREDICTIONS=5
CONFIDENCE_THRESHOLD=0.1

# Data sources
COFID_CSV_PATH=./seeds/data/cofid.csv
OFF_DUMP_PATH=./seeds/data/openfoodfacts.csv
USDA_CSV_PATH=./seeds/data/usda.csv

# Performance
TORCH_NUM_THREADS=4
USE_GPU=false

# GAINS Scoring weights
GAINS_PROTEIN_WEIGHT=0.25
GAINS_CARB_WEIGHT=0.20
GAINS_FAT_WEIGHT=0.15
GAINS_PROCESSING_WEIGHT=0.25
GAINS_TRANSPARENCY_WEIGHT=0.15
